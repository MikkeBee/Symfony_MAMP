{% extends 'base.html.twig' %}
{% block content %}
    <div class="header">
      <h2>CRUD App</h2>
      <form action="{{path('create_task')}}" method="post">
        <input type="text" id="myInput" name="title" placeholder="Task title..." />
        <button type="submit" class="addBtn">Add a task</button>
      </form>
    </div>

    <ul>
    {% for task in tasks %}
      <li>
        <a href="{{path('update_task', {'id':1})}}"> <span class="task-list-item">{{task.title}} </span> </a
        ><a onclick="return confirm('Are you sure to delete?')" href="{{path('delete_task', {'id':1})}}"><span class="close">X</span></a>
      </li>
      {% endfor %}
    </ul>
{% endblock %}